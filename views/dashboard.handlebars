<section class="row">
    <div class="column">
        <h2>Create New Post</h2>

        <form class="new-post-form">
            <div>
                <input type="text" id="post-title" name="post-title" placeholder="Add title here">
            </div>
            <div>
                <textarea id="post-text" name="post-text" placeholder="Post text here"></textarea>
            </div>
            <div>
                <button type="submit" class="btn">Add post</button>
            </div>
        </form>
    </div>
    <div class="column">
        <h2>About Me</h2>
        {{> user-info}}
    </div>
</section>

{{#if posts.length}}
<section>
    <h2>Your posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>